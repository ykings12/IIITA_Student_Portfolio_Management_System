background-position: center;
      {{!-- background-position-y: -65px; --}}
      background-repeat: no-repeat;
}
.topnav {
  overflow: hidden;
  background-color: white;
  opacity: 0.7;
}

.topnav a {
  float: left;
  
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.topnav p{
  color:black;
  text-align: center;
  padding-top: 0px;
  padding-bottom: 0px;
  text-decoration: none;
  font-family: monospace;
  font-size: 20px;
  font-weight: bolder;
}
.topnav .active {
  cursor: pointer;
}


body {
  transition: background-color .5s;
}

.sidenav {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: #00eefd;
  overflow-x: hidden;
  transition: 0.5s;
  padding-top: 60px;
  opacity: 0.7;
}
.sidenav a {
  padding: 8px 8px 8px 45px;
  text-decoration: none;
  font-size: 20px;
  color: black;
  display: block;
  transition: 0.3s;
}

.sidenav a:hover {
  color: #f1f1f1;
}

.sidenav .closebtn {
  position: absolute;
  top: 0;
  right: 25px;
  font-size: 36px;
  margin-left: 50px;
  padding-top: 25px;
}


@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}
  
  /* Full-width inputs */
  input[type=text], input[type=password] {
    width: 100%;
    padding: 10px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    border-radius: 7px;
  }
  
  /* Set a style for all buttons */
  button {
    background-color: rgb(0, 60, 255);
    color: white;
    padding: 14px 20px;
    margin: 15px 0;
    border: none;
    cursor: pointer;
    width: 100%;
    border-radius: 7px;
  }
  
  /* Add a hover effect for buttons */
  button:hover {
    opacity: 0.8;
  }
  
  
  .container {
    padding: 16px;
  }
  span.res{
    color:rgb(0, 60, 255) ;
    opacity: 0.7;
  }
  span.pwe{
    color:rgb(0, 60, 255) ;
    opacity: 0.7;
  }
  span:hover{
    opacity: 1;
  }
  span.res {
    float: right;

    
  }
  div.container {
 
  margin-left: 37%;
  margin-right: 37%;
