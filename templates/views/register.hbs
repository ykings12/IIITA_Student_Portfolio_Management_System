    <center><h3 id="MyHeading" style="font-size:29px; text-decoration: none" ">User Registration Form</h3></center>
    <form name="myForm" action="/register" method="post" onsubmit="return validateform()">

            <label for="name">Full Name:</label>
            <input type="text" name="name" class="form-control" pattern="[A-Za-z]{2,20}" required>

            <label for="enroll">Enrollment Number:</label>
            <input type="text" name="enroll" class="form-control" pattern="^(IIT|IEC|IIB)\d{7}$" required>
