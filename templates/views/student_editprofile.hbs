<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>

    body {
      margin: 0;
      font-family: Arial, Helvetica, sans-serif;
      background-position: center;
      background-position-y: -65px;
      background-repeat: no-repeat;
    }

    .topnav {
      overflow: hidden;
      /* background-color: #00EEFD; */
      background-color: white;
      opacity: 0.7;
    }

    .topnav a {
      float: left;
      /* color: #f2f2f2; */
      color: black;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }

    .topnav a:hover {
      background-color: #ddd;
      color: black;
    }

    .topnav p {
      color: black;
      font-family: monospace;
      font-size: 20px;
      font-weight: bolder;
      text-align: center;
      padding-top: 0px;
      padding-bottom: 0px;
      text-decoration: none;
    }

    .topnav .active {
      cursor: pointer;
    }


    body {
      transition: background-color .5s;
    }

    .sidenav {
      height: 100%;
      width: 0;
      position: fixed;
      z-index: 1;
      top: 0;
      left: 0;
      background-color: #00EEFD;
      overflow-x: hidden;
      transition: 0.5s;
      padding-top: 80px;
      /* padding-left: 20px; */
      opacity: 0.7;
    }

    .sidenav a {
      padding: 12px 12px 12px 45px;
      padding-left: 80px;
      text-decoration: none;
      font-size: 20px;
      color: black;
      display: block;
      transition: 0.3s;
    }
    
    .sidenav .closebtn {
      position: absolute;
      top: 0;
      padding-top: 15px;
      right: 25px;
      font-size: 36px;
      margin-left: 50px;
    }


    @media screen and (max-height: 450px) {
      .sidenav {
        padding-top: 15px;
      }

      .sidenav a {
        font-size: 18px;
      }
    }


    /* Set a style for all buttons */
    button {
      background-color: rgb(0, 60, 255);
      color: white;
      padding: 14px 20px;
      margin: 15px 0;
      border: none;
      cursor: pointer;
      width: 100%;
      border-radius: 7px;
    }

    /* Add a hover effect for buttons */
    button:hover {
      opacity: 0.8;
    }
    img{
        height: 200px;
        width: 200px;
        padding-left: 50px;
        padding-bottom: 40px;
        opacity: 200%;
    }
    .column1 {
            float: right;
            width: 270px;
            margin-top: 100px;
            padding: 50px;
            margin-right: 40px;
        }

        .column2 {
            float: right;
            width: 270px;
            margin-top: 100px;
            padding: 50px;
        }

        .row img:hover {
            opacity: 80%;
        }

        /* .column1 figcaption{
            margin-left: 90px;
            font-size: 25px;
            font-family: monospace;
            font-weight: bolder;

        } */
        .column2 figcaption{
            margin-left: 74px;
            font-size: 25px;
            font-family: monospace;
            font-weight: bolder;
        }
    footer {
      text-align: center;
      padding: 2px;
      background-color: white;
      opacity: 0.7;
      color: white;
      margin-top: 628px;
    }
  </style>
</head>

<body background="main2.jpeg ">

  <div class="topnav">
    <a class="active" style="font-size: 33px;" onclick="openNav()">&#9776; </a>
    <p>Welcome To Your Profile</p>
  </div>

  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <img src="pic.png" style="margin-left: -30px;" >
    <a style="text-decoration: none;">Name</a>
  </div>


  <script>
    function openNav() {
      document.getElementById("mySidenav").style.width = "250px";
      document.getElementById("main").style.marginLeft = "250px";
      document.body.style.backgroundColor = "rgba(0,0,0,1)";
    }

    function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
      document.getElementById("main").style.marginLeft = "0";
      document.body.style.backgroundColor = "white";
    }
  </script>

    <footer>
      <p class="copy"
        style="color: black; font-family: monospace; font-size: 13px; font-weight: bolder; text-align: center; ">&copy;
        Copyright 2023 IIITA</p>
    </footer>

</body>

</html>